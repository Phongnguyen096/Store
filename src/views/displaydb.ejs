<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

.btn-edit {background-color: #19a6bc; color: azure; cursor: pointer; padding: 2px 4px;} 
.btn-delete {background-color: #b61d1d; color:#ffff; cursor: pointer; padding: 2px 4px;} 

    </style>
</head>
<body>
    <h1>get crud from view</h1>
    <table style="width:100%">
        <tr>
          <th>STT</th>
          <th>email</th>
          <th>full name</th>
          <th>address</th>
          <th>phone number</th>
          <th>Action</th>
        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].id %></td>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName +" "+dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].phoneNumber %></td>
              <td>
                  <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="btn-edit">Edit</a>
                  <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn-delete">Delete</a>
              </td>
            </tr>
         <% } %>
    </table>
</body>
</html>